---
export interface Props {
    title: string
    img: string
    color: string
    'bgColor': string
}

const { title, img, color, bgColor } = Astro.props
---

<div class="rounded-lg flex items-center p-5" style={ "background-color:" + bgColor + "; border-color:" + color + ";" }>
    <img src={img} alt={title} />
</div>
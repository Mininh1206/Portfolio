<header class="flex h-screen place-content-center fixed right-8 z-10
                max-sm:w-full max-sm:h-20 max-sm:right-0 max-sm:backdrop-blur-sm">
    <nav class="my-auto">
        <ul class="flex flex-col gap-5 items-center font-bold text-xl
                    max-sm:flex-row max-sm:gap-10 max-sm:text-base">
            <li class="hover:scale-110 hover:animate-pulse">
                <a href="#home" id="home-menu-item" class="menu-item">Inicio</a>
            </li>
            <li class="hover:scale-110 hover:animate-pulse">
                <a href="#abilities" id="abilities-menu-item" class="menu-item">Habilidades</a>
            </li>
            <li class="hover:scale-110 hover:animate-pulse">
                <a href="#projects" id="projects-menu-item" class="menu-item">Proyectos</a>
            </li>
        </ul>
    </nav>
</header>

<script>
    const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
    }

    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const menuItems = document.querySelectorAll(".menu-item")

                menuItems.forEach(menuItem => {
                    if (menuItem.id.includes(entry.target.id)) {
                        menuItem.classList.toggle("animate-pulse", true)
                    } else {
                        menuItem.classList.toggle("animate-pulse", false)
                    }
                })
            }
        })
    }, observerOptions)

    const sections = document.querySelectorAll(".section")
    sections.forEach(section => observer.observe(section))
</script>